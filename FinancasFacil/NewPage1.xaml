<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinancasFacil.NewPage1"
             Title="FINANCAS">
    <VerticalStackLayout>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0" Text="Nome da Ação:" />
            <Label Grid.Row="0" Grid.Column="1" x:Name="NomeAcaoLabel" />

            <Label Grid.Row="1" Grid.Column="0" Text="Valor da Ação:" />
            <Label Grid.Row="1" Grid.Column="1" x:Name="ValorAcaoLabel" />

        </Grid>


    </VerticalStackLayout>
</ContentPage>